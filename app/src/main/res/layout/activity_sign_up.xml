<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sign_up">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/org">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:background="@color/org"
                android:text="BLOOD BANK"
                android:textColor="@color/white"
                android:textSize="30dp" />


        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-black"
                android:text="Donate blood"
                android:textColor="@color/black"
                android:textSize="30dp" />


            <EditText
                android:id="@+id/smails"
                android:layout_width="302dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/shape2"
                android:hint="Email"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingEnd="10dp" />

            <EditText
                android:id="@+id/spassword"
                android:layout_width="302dp"
                android:layout_height="50dp"
                android:layout_below="@id/smails"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/shape2"
                android:hint="Blood type
"
                android:paddingStart="20dp" />

            android:inputType="text"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            tools:ignore="TextFields" />

            <EditText
                android:id="@+id/scpassword"
                android:layout_width="302dp"
                android:layout_height="50dp"
                android:layout_below="@id/spassword"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/shape2"
                android:hint="Name"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                tools:ignore="TextFields" />

            <EditText
                android:id="@+id/snumber"
                android:layout_width="302dp"
                android:layout_height="50dp"
                android:layout_below="@id/scpassword"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/shape2"
                android:hint="Phone Number"
                android:inputType="number"
                android:paddingStart="20dp"
                android:paddingEnd="10dp" />

            <EditText
                android:id="@+id/sbt"
                android:layout_width="302dp"
                android:layout_height="50dp"
                android:layout_below="@id/scpassword"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/shape2"
                android:hint="Blood Unit"
                android:inputType="text"
                android:paddingStart="20dp"
                android:paddingEnd="10dp" />


            <TextView
                android:id="@+id/tw5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/snumber"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:text="Gender"
                android:textColor="@color/black"
                android:textSize="26dp" />


            <RadioGroup
                android:id="@+id/rg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tw5"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/malerb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="male " />

                <RadioButton
                    android:id="@+id/Femalerb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Female" />
            </RadioGroup>


            <Button
                android:id="@+id/sb"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@id/rg1"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="50dp"
                android:backgroundTint="@color/org"
                android:text="Donate blood"
                app:backgroundTint="@null" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>